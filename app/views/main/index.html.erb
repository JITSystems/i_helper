		<%= f.text_field :fio, :id => "fio_field_up" %>
		<%= f.label "Время:" %>
		<%= f.text_field :time, :id => "time_field_up"  %>
		<%= f.label "Тема:" %>
		<%= f.text_field :theme, :id => "theme_field_up"  %>
	</div>
	
	<div class="modal-footer">
		<%= f.submit "Изменить", :class=>"btn btn-primary", :onclick => "$('#calls_up_Modal').modal('hide');", :id => "calls_up_sbm" %>
		<% end %>
	</div>
</div>
